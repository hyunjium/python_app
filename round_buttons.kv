<Button>
    font_size: 30
    pos_hint: {'center_x': .5}
    size_hint: (1, .5)

<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 40
        spacing: 15

        Label:
            text: "Choose a game!"
            font_size: 40
            color: (13/255, 133/255, 0, 1)
            bold: True
            italic: True


        RoundedButton:
            text: "Lotto number"
            #size_hint_y = None
            #height = 50
            #size_hint_x = None
            #width = 200
            #pos_hint: {'center_x': 0.5}
            #size_hint: (1, .3)
            on_press: print("Goodbye!")


        Button:
            text: "Roulette"

        Button:
            text: "Crocodile"



<RoundedButton@Button>
    canvas.before:
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]